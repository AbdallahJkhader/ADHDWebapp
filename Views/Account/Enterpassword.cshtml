@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Enter Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
            background: linear-gradient(135deg, #f6f8fb 0%, #eef2f7 100%);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 16px 12px;
        }

        .logo {
            font-size: 36px;
            font-weight: bold;
            color: #2196F3;
            margin-bottom: 20px;
        }

        .container {
            background-color: #ffffff;
            width: 100%;
            max-width: 360px;
            display: block;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
            border: 1px solid #eef0f3;
            border-radius: 12px;
            overflow: hidden;
            margin-top: 0;
        }

        .right {
            padding: 20px;
        }

        .right h2 {
            margin-bottom: 14px;
            color: #1f2937;
            font-size: 18px;
            text-align: center;
            font-weight: 600;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        input {
            padding: 10px 12px;
            font-size: 14px;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
            transition: border-color .2s ease, box-shadow .2s ease, background-color .2s ease;
            background-color: #ffffff;
        }

        input:focus {
            outline: none;
            border-color: #60a5fa;
            box-shadow: 0 0 0 4px rgba(59,130,246,0.15);
            background-color: #ffffff;
        }

        .submit-btn {
            background-color: #2563eb;
            color: white;
            border: none;
            padding: 10px 12px;
            font-size: 14px;
            border-radius: 8px;
            cursor: pointer;
            transition: transform .1s ease, box-shadow .2s ease, background-color .2s ease;
            box-shadow: 0 6px 16px rgba(37,99,235,0.25);
        }

        .submit-btn:hover {
            background-color: #1d4ed8;
            box-shadow: 0 10px 22px rgba(37,99,235,0.3);
            transform: translateY(-1px);
        }

        .link {
            text-align: center;
            margin-top: 8px;
            color: #6b7280;
            font-size: 13px;
        }

        .link a {
            color: #2196F3;
            text-decoration: none;
        }

        .link a:hover {
            text-decoration: underline;
        }

        .forgot-password {
            text-align: right;
            margin-top: 10px;
        }

        .forgot-password a {
            color: #2196F3;
            text-decoration: none;
            font-size: 14px;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .error-msg {
            color: red;
            text-align: center;
            margin-bottom: 10px;
        }

        .hero {
            position: relative;
            width: 100%;
            border-bottom: 1px solid #eee;
            margin-bottom: 20px;
        }

        .hero::before {
            content: "";
            display: block;
            padding-top: 56.25%; /* 16:9 fallback */
        }

        .hero img {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>
<body>

    

    <div class="container">
        <div class="hero">
            <img src="/images/loginphoto.jpg" alt="Login image" />
        </div>
        <div class="right">
            <h2>Enter Your Password</h2>

            @if (ViewBag.Error != null)
            {
                    <p class="error-msg">@ViewBag.Error</p>
            }

            <form asp-action="EnterPassword" asp-controller="Account" method="post">
                <input type="password" name="password" placeholder="Enter your password" required />
                <button type="submit" class="submit-btn">Continue</button>
            </form>

            <div class="forgot-password">
                <a href="@Url.Action("ForgotPassword", "Account")">Forgot password?</a>
            </div>

           
        </div>
    </div>

</body>
</html>