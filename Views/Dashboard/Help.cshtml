@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Help Center - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/dashboard.css" rel="stylesheet" />
    <link rel="icon" href="~/images/logo.jpg" />
    <style>
        .help-hero {
            background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
            color: white;
            padding: 4rem 0 3rem;
            margin-bottom: 3rem;
        }
        
        .help-nav-tabs {
            border-bottom: 2px solid #dee2e6;
            margin-bottom: 2rem;
        }
        
        .help-nav-tabs .nav-link {
            color: #6c757d;
            border: none;
            padding: 1rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .help-nav-tabs .nav-link:hover {
            color: #0d6efd;
            background: rgba(13, 110, 253, 0.1);
        }
        
        .help-nav-tabs .nav-link.active {
            color: #0d6efd;
            border-bottom: 3px solid #0d6efd;
            background: transparent;
        }
        
        .feature-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border: none;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.15);
        }
        
        .feature-icon {
            width: 60px;
            height: 60px;
            background: #ffffff;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }
        
        .accordion-button:not(.collapsed) {
            background-color: #e7f1ff;
            color: #0d6efd;
        }
        
        .contact-form {
            background: #f8f9fa;
            padding: 2rem;
            border-radius: 12px;
        }
    </style>
</head>
<body class="dashboard-page">
    <div class="top-nav">
        <div class="left-nav d-flex align-items-center gap-2">
            <button class="nav-btn" type="button" onclick="window.history.back()">
                <img src="~/images/logo.jpg" alt="Home" style="height: 20px; width: auto;" />
                <span>Back</span>
            </button>
        </div>
    </div>

    <!-- Hero Section -->
    <div class="help-hero text-center">
        <div class="container">
            <img src="~/images/logo.jpg" alt="Help Center" style="width: 100px; height: 100px; object-fit: contain; border-radius: 50%; background: white; padding: 10px; margin-bottom: 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.2);" />
            <h1 class="display-4 fw-bold mb-3">How can we help you?</h1>
            <p class="lead">Find answers, learn about features, and get support</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mb-5">
        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs help-nav-tabs" id="helpTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button">
                    Overview
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="faq-tab" data-bs-toggle="tab" data-bs-target="#faq" type="button">
                    Common Questions
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button">
                    Contact Us
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="password-tab" data-bs-toggle="tab" data-bs-target="#password" type="button">
                    Forgot Password
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="helpTabContent">
            <!-- Overview Tab -->
            <div class="tab-pane fade show active" id="overview" role="tabpanel">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="mb-4">Welcome to Your Dashboard</h2>
                        <p class="lead text-muted">A distraction-free platform designed to help you focus, organize, and succeed in your studies.</p>
                    </div>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <div class="card feature-card h-100 p-4">
                            <div class="feature-icon mx-auto">
                                <img src="~/images/focus icon.png" alt="Focus" style="width: 32px; height: 32px; object-fit: contain;" />
                            </div>
                            <h4 class="text-center mb-3">Focus Tools</h4>
                            <p class="text-muted text-center">Use Pomodoro timer, breathing exercises, focus music, and mind games to enhance concentration.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card feature-card h-100 p-4">
                            <div class="feature-icon mx-auto">
                                <img src="~/images/files icon.png" alt="Files" style="width: 32px; height: 32px; object-fit: contain;" />
                            </div>
                            <h4 class="text-center mb-3">File Management</h4>
                            <p class="text-muted text-center">Upload, organize, and access your study materials. Create folders and manage files efficiently.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card feature-card h-100 p-4">
                            <div class="feature-icon mx-auto">
                                <img src="~/images/Classes icon.png" alt="Classes" style="width: 32px; height: 32px; object-fit: contain;" />
                            </div>
                            <h4 class="text-center mb-3">Classes</h4>
                            <p class="text-muted text-center">Join classes, collaborate with peers, share files, and track your progress with teachers.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card feature-card h-100 p-4">
                            <div class="feature-icon mx-auto">
                                <img src="~/images/tools icon.png" alt="Tools" style="width: 32px; height: 32px; object-fit: contain;" />
                            </div>
                            <h4 class="text-center mb-3">Study Tools</h4>
                            <p class="text-muted text-center">Access calculator, translator, progress tracker, and study planner to organize your study sessions.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card feature-card h-100 p-4">
                            <div class="feature-icon mx-auto">
                                <img src="~/images/summary.png" alt="AI" style="width: 32px; height: 32px; object-fit: contain;" />
                            </div>
                            <h4 class="text-center mb-3">AI Assistant</h4>
                            <p class="text-muted text-center">Generate summaries, flashcards, quizzes, and get AI-powered help with your study materials.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card feature-card h-100 p-4">
                            <div class="feature-icon mx-auto">
                                <img src="~/images/progress.png" alt="Progress" style="width: 32px; height: 32px; object-fit: contain;" />
                            </div>
                            <h4 class="text-center mb-3">Progress Tracking</h4>
                            <p class="text-muted text-center">Monitor your focus time, study sessions, and track your academic progress over time.</p>
                        </div>
                    </div>
                </div>

                <div class="card border-primary">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-lightbulb text-warning me-2"></i>Getting Started</h5>
                        <ul class="mb-0">
                            <li>Upload your study materials using the Files menu</li>
                            <li>Create or join classes to collaborate with others</li>
                            <li>Use Focus tools like Timer and Music to improve concentration</li>
                            <li>Generate AI summaries and flashcards from your files</li>
                            <li>Track your progress and study time in Progress Tracker</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- FAQ Tab -->
            <div class="tab-pane fade" id="faq" role="tabpanel">
                <h2 class="mb-4">Common Questions</h2>
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                How do I upload files?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Click the <strong>Files</strong> menu in the top navigation, then select <strong>Upload New</strong>. You can upload PDF, DOCX, TXT files, and images. The files will appear in your file grid.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                How do I create folders to organize my files?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                From the <strong>Files > My Files</strong> panel, you'll see an input field at the top. Type a folder name and click the arrow button (â†’). Then select the files you want to include and click "Create Folder".
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                How do I join a class?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Go to <strong>User Menu > Classes</strong>, then click <strong>Join Class</strong>. Enter the join code provided by your teacher and click Join.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                How does the Focus Timer work?
                            </button>
                        </h2>
                        <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                The Timer uses the Pomodoro technique. Select a preset (25min Pomodoro, 15min Break, etc.) or set a custom duration. Click <strong>Start</strong> to begin. Your focus time is automatically tracked and added to your Progress stats.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                                How do I use AI tools to generate summaries?
                            </button>
                        </h2>
                        <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Open any file from your files grid. Once the file is displayed, you'll see AI tool buttons at the top: <strong>Summary</strong>, <strong>Flashcards</strong>, <strong>Quiz</strong>, and <strong>Notes</strong>. Click any to generate AI-powered study materials.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq6">
                                What file formats are supported?
                            </button>
                        </h2>
                        <div id="faq6" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Currently supported formats: <strong>PDF</strong>, <strong>DOCX</strong> (Word), <strong>TXT</strong> (Text), and <strong>Images</strong> (JPG, PNG). Maximum file size is 10MB per file.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq7">
                                How do I track my progress?
                            </button>
                        </h2>
                        <div id="faq7" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Click <strong>Tools > Progress Tracker</strong> to view your weekly focus time, subjects studied, and activity charts. Your timer sessions are automatically recorded and displayed here.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq8">
                                Can teachers see my study progress?
                            </button>
                        </h2>
                        <div id="faq8" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Teachers can view the progress of students in their classes. They can see focus time and completed tasks for students who are members of their classes.
                            </div>
                        </div>
                    </div>
                </div>
                </div>
                
                <div class="text-center mt-5 p-4 bg-light rounded border">
                    <h4>Still need help?</h4>
                    <p class="text-muted mb-3">If you couldn't find the answer to your question, feel free to contact us directly.</p>
                    <button class="btn btn-outline-primary" onclick="document.getElementById('contact-tab').click()">
                        Contact Us
                    </button>
                </div>
            </div>

            <!-- Contact Tab -->
            <div class="tab-pane fade" id="contact" role="tabpanel">
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="mb-4">Get in Touch</h2>
                        <div class="contact-form">
                            <form id="contactForm">
                                <div class="mb-3">
                                    <label for="contactName" class="form-label">Your Name</label>
                                    <input type="text" class="form-control" id="contactName" required>
                                </div>
                                <div class="mb-3">
                                    <label for="contactEmail" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="contactEmail" required>
                                </div>
                                <div class="mb-3">
                                    <label for="contactSubject" class="form-label">Subject</label>
                                    <select class="form-select" id="contactSubject">
                                        <option value="general">General Inquiry</option>
                                        <option value="technical">Technical Support</option>
                                        <option value="feature">Feature Request</option>
                                        <option value="bug">Report a Bug</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="contactMessage" class="form-label">Message</label>
                                    <textarea class="form-control" id="contactMessage" rows="5" required></textarea>
                                </div>
                                <div id="contactSuccessMessage" class="alert alert-success d-none mb-3">
                                    Thank you
                                </div>
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="bi bi-send me-2"></i>Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Forgot Password Tab -->
            <div class="tab-pane fade" id="password" role="tabpanel">
                <h2 class="mb-4">Password Reset</h2>
                
                <div class="alert alert-info mb-4">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Need to reset your password?</strong> Follow the steps below to regain access to your account.
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-4">
                                <h5 class="card-title mb-4"><i class="bi bi-shield-lock text-primary me-2"></i>Reset Your Password</h5>
                                <p class="text-muted mb-4">Enter your email address and we'll send you a link to reset your password.</p>
                                
                                <form id="passwordResetForm">
                                    <div class="mb-3">
                                        <label for="resetEmail" class="form-label">Email Address</label>
                                        <input type="email" class="form-control" id="resetEmail" required placeholder="name@example.com">
                                    </div>
                                    <div id="resetSuccessMessage" class="alert alert-success d-none mb-3">
                                        Thank you
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-envelope me-2"></i>Send Reset Link
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Contact form handler
        document.getElementById('contactForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            // Show success message
            const successMsg = document.getElementById('contactSuccessMessage');
            if(successMsg) successMsg.classList.remove('d-none');
            
            // Optional: Hide form or disable button? User said just "write thank you"
            // For better UX, let's clear the form
            this.reset();
        });

        // Password Reset form handler
        document.getElementById('passwordResetForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            // Show success message
            const successMsg = document.getElementById('resetSuccessMessage');
            if(successMsg) successMsg.classList.remove('d-none');
            
            this.reset();
        });
    </script>
</body>
</html>
